{
    "configurations": [
        
    {
        "name": "gdb",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceRoot}/build/pathTracer",
        "args": ["${workspaceRoot}/examples/simpleScene1.usda"],
        "stopAtEntry": false,
        "cwd": "${fileDirname}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description":  "Set Disassembly Flavor to Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            }
        ]
    }
    ]
}