{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "build and run simpleScene1",
            "type": "shell",
            "command": "${workspaceFolder}/build/pathTracer",
            "args": [
                "${workspaceFolder}/examples/simpleScene1.usda"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "CMake: build pathTracer"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "type": "cmake",
            "label": "CMake: build pathTracer",
            "command": "build",
            "detail": "CMake template build task",
            "problemMatcher": {
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^([#%$~A-Za-z0-9_:+-\\\\]+)[(]([0-9]+)[)] (:) (Warning|Error)(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}